{
  "name": "mern-crud-app",
  "version": "1.0.0",
  "description": "A MERN stack application with CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd frontend && npm start",
